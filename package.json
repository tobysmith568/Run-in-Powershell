{
	"name": "run-in-powershell",
	"displayName": "Run in Powershell",
	"description": "Runs scripts in a new Powershell window outside of VS Code.",
  "publisher": "tobysmith568",
	"version": "0.0.1",
	"license": "GPL-3.0-or-later",
	"engines": {
		"vscode": "^1.45.1"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onCommand:run-in-powershell.runInPS"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "run-in-powershell.runInPS",
				"title": "Run In Powershell",
				"icon" : {
					"light": "./icons/terminal-outline.svg",
					"dark": "./icons/terminal-outline.svg"
				}
			}
		],
    "menus": {
      "explorer/context": [
        {
          "command": "run-in-powershell.runInPS",
					"group": "1_powershell",
					"when": "resourceExtname == .ps1"
        }
			],
			"editor/title": [
        {
          "command": "run-in-powershell.runInPS",
					"when": "resourceExtname == .ps1"
        }
      ]
    }
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"lint": "eslint src --ext ts",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/vscode": "^1.45.1",
		"@types/glob": "^7.1.1",
		"@types/mocha": "^7.0.2",
		"@types/node": "^13.11.0",
		"eslint": "^6.8.0",
		"@typescript-eslint/parser": "^2.30.0",
		"@typescript-eslint/eslint-plugin": "^2.30.0",
		"glob": "^7.1.6",
		"mocha": "^7.1.2",
		"typescript": "^3.8.3",
		"vscode-test": "^1.3.0"
	}
}
